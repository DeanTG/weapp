@import '../../assets/libs/animate.wxss';
.intro .logo {
  display: block;
  margin: 20px auto;
  width: 80px;
  height: 54px;
}

.intro .title {
  display: block;
  margin: 20px auto;
  color: #409ee9;
  font-size: 16px;
  text-align: center;
}

.item {
  line-height: 20px;
  font-size: 12px;
  color: #999;
  text-align: center;
}

.item image {
  display: inline-block;
  width: 14px;
  height: 14px;
  margin-right: 5px;
  vertical-align: middle;
}

.item text {
  display: inline-block;
  vertical-align: middle;
}